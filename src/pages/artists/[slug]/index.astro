---
import { SEO } from "astro-seo";
import RootLayout from "@/layouts/RootLayout.astro";
import {
  localizedQuery,
  artistIntroQuery,
  slugsFor,
  type ArtistIntroQueryType,
} from "@/queries/contentQueries";
import { astroI18n, createGetStaticPaths } from "astro-i18n";
import PageContents from "@/components/PageContents.astro";

export const getStaticPaths = createGetStaticPaths(slugsFor("artist"));

const { slug } = Astro.params as { slug: string };
const artist = await localizedQuery<ArtistIntroQueryType>(Astro)(
  artistIntroQuery,
  { slug },
);
if (!artist) {
  astroI18n.redirect("/404");
}
---

{
  artist && (
    <RootLayout>
      <SEO
        slot="head"
        title={artist.title}
        titleTemplate="%s | Future Of Conservation"
        charset="UTF-8"
        description=""
      />
      <PageContents value={artist.introduction}>
        <hgroup class="passthrough" slot="hgroup">
          <h1 lang={artist.titleLang}>{artist.title}</h1>
        </hgroup>
      </PageContents>
    </RootLayout>
  )
}

<style lang="scss">
  h1 {
    text-align: center;
    min-height: 1.66em;
  }
</style>
