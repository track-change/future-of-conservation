---
import { SEO } from "astro-seo";
import Recirculation from "@/components/Recirculation.astro";
import RootLayout from "@/layouts/RootLayout.astro";
import {
  localizedQuery,
  artistIntroQuery,
  slugsFor,
  type ArtistIntroQueryType,
} from "@/queries/contentQueries";
import { astroI18n, createGetStaticPaths } from "astro-i18n";
import Text from "@/components/Text/index.astro";
import ReadableLayout from "@/layouts/ReadableLayout.astro";
import Carousel from "@/components/Carousel.astro";

export const getStaticPaths = createGetStaticPaths(slugsFor("artist"));

const { slug } = Astro.params as { slug: string };
const artist = await localizedQuery<ArtistIntroQueryType>(Astro)(
  artistIntroQuery,
  { slug },
);
if (!artist) {
  astroI18n.redirect("/404");
}
---

{
  artist && (
    <RootLayout>
      <SEO
        slot="head"
        title={artist.title}
        titleTemplate="%s | Future Of Conservation"
        charset="UTF-8"
        description=""
      />
      <ReadableLayout>
        <h1 lang={artist.titleLang}>{artist.title}</h1>
        <div class="passthrough" lang={artist.introductionContentLang}>
          <Text value={artist.introductionContent} />
        </div>
        <div>
          {artist.introductionImages && (
            <Carousel
              id="intro-carousel"
              carousel={artist.introductionImages}
            />
          )}
        </div>
      </ReadableLayout>
      {artist.introductionRecirc && (
        <Recirculation recirc={artist?.introductionRecirc} />
      )}
    </RootLayout>
  )
}

<style lang="scss">
  h1 {
    text-align: center;
    min-height: 1.66em;
  }
</style>
