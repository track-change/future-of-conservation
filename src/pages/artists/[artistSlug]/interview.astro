---
import Recirculation from "@/components/Recirculation.astro";
import RootLayout from "@/layouts/RootLayout.astro";
import type { Artist } from "@/sanity";
import {
  localizedQuery,
  artistInterviewQuery,
  artistSlugsQuery,
  type ArtistInterQueryType,
} from "@/queries/contentQueries";
import { astroI18n, createGetStaticPaths } from "astro-i18n";
import { sanityClient } from "sanity:client";
import Text from "@/components/Text.astro";
import ReadableLayout from "@/layouts/ReadableLayout.astro";

export const getStaticPaths = createGetStaticPaths(async () => {
  const slugs =
    await sanityClient.fetch<{ artistSlug: string }[]>(artistSlugsQuery);
  return slugs.map(({ artistSlug }) => ({ params: { artistSlug } }));
});

const { artistSlug: slug } = Astro.params as { artistSlug: string };
const artist = await localizedQuery<ArtistInterQueryType>(Astro)(
  artistInterviewQuery,
  { slug },
);
if (!artist) {
  astroI18n.redirect("/404");
}
---

{
  artist && (
    <RootLayout>
      <ReadableLayout>
        <h1>Interview</h1>
        <h2>{artist.title}</h2>
        <h3>Artist and Conservator</h3>
        <div class="passthrough" lang={artist.interviewContentLang}>
          <Text content={artist.interviewContent} />
        </div>
      </ReadableLayout>
      {artist.interviewRecirc && (
        <Recirculation recirc={artist?.interviewRecirc} />
      )}
    </RootLayout>
  )
}
