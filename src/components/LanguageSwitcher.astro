---
import { astroI18n, l } from "astro-i18n";

const { locale, route } = astroI18n;
---

<li role="radiogroup" aria-label="Pick a language">
  <a
    role="radio"
    href={l(route, undefined, { targetLocale: "kr" })}
    aria-checked={locale === "kr"}
    class="hoverable"
  >
    KR
  </a>
  <a
    role="radio"
    href={l(route, undefined, { targetLocale: "en" })}
    aria-checked={locale === "en"}
    class="hoverable"
  >
    EN
  </a>
</li>

<style lang="scss">
  li {
    flex: 0;
    min-width: unset;
    display: flex;
    align-items: center;
    margin-left: 1px;
    border: 1px solid var(--clr-fg);
    border-radius: 1em;
    font-size: 0.75rem;
    line-height: 1;
    padding: 0px 4px;
  }

  a {
    padding: 2px 4px;
    display: flex;
    align-items: center;
    justify-content: center;

    &[aria-checked="true"] {
      font-weight: 700;
    }
  }
</style>
