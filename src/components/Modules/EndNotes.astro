---
import TextMin from "@/components/Text/TextMin.astro";
import type { Footnote } from "@/sanity";
interface Props {
  value: Footnote[];
}

const {
  props: { value },
} = Astro;
---

<hr />
<section class="Footnotes" aria-label="Footnotes">
  {
    value.map((fn, i) => (
      <p>
        <sup>
          <span data-fn-number>{i + 1}.</span>
          <TextMin value={fn.content} />
        </sup>
      </p>
    ))
  }
</section>

<style>
  .Footnotes {
    width: 100%;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    column-gap: 3rem;
    padding-top: 1.5rem;
  }

  hr {
    opacity: 0;
  }

  sup {
    display: inline-flex;
  }

  span {
    display: block;
    margin-right: 0.5ch;
  }
</style>
