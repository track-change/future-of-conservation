---
import { sanityClient } from "sanity:client";
import { siteHeaderQuery } from "../utils/queries";
import Link from "@/components/Link.astro";
import { astroI18n, l } from "astro-i18n";
import type { SiteHeader } from "@/sanity";

const { locale, primaryLocale, route } = astroI18n;
const header = await sanityClient.fetch<SiteHeader>(siteHeaderQuery, {
  locale,
  primaryLocale,
});
---

<nav>
  {
    header.navItems?.map((link) => (
      <li>
        <Link link={link} withAriaCurrent class="hoverable" />
      </li>
    ))
  }
  <li class="lang_switch" role="radiogroup" aria-label="Pick a language">
    <a
      role="radio"
      href={l(route, undefined, { targetLocale: "kr" })}
      aria-checked={locale === "kr"}
      class="hoverable"
    >
      KR
    </a>
    <a
      role="radio"
      href={l(route, undefined, { targetLocale: "en" })}
      aria-checked={locale === "en"}
      class="hoverable"
    >
      EN
    </a>
  </li>
</nav>

<style lang="scss">
  nav {
    position: sticky;
    top: 0.25rem;
    font-family:
      Helvetica Neue,
      Helvetica,
      Arial,
      sans-serif;
    text-transform: uppercase;
    display: flex;
    background-color: var(--clr-bg);
    column-gap: 0.25rem;
    row-gap: 0.1rem;
    padding: 0 0.25rem;
    flex-wrap: wrap;

    & > li:not(.lang_switch) {
      border-top: 1px solid var(--clr-fg);
      border-bottom: 1px solid var(--clr-fg);

      @media screen and (max-width: 768px) {
        min-width: 40%;
        border-top: unset;

        &:nth-child(1),
        &:nth-child(2) {
          border-top: 1px solid var(--clr-fg);
        }
      }
    }
  }

  .navlinks {
    flex: 1;
    display: flex;
    flex-wrap: wrap;
    gap: 0.25rem;

    @media screen and (min-width: 768px) {
      grid-template-columns: repeat(4, 1fr);
    }

    & li {
      border-top: 1px solid var(--clr-fg);
      border-bottom: 1px solid var(--clr-fg);
    }

    & a {
      // border-top: 1px solid var(--clr-fg);
      // border-bottom: 1px solid var(--clr-fg);
    }
  }

  li {
    flex: 1;
  }

  a {
    padding: 2px 10px;
    display: block;
    text-align: center;
    white-space: nowrap;
  }

  a[aria-current="page"] {
    background-color: var(--clr-3);
  }
  .lang_switch a[aria-checked="true"] {
    font-weight: 700;
  }

  .lang_switch {
    flex: 0;
    min-width: unset;
    display: flex;
    align-items: center;
    margin-left: 1px;
    border: 1px solid var(--clr-fg);
    border-radius: 1em;
    font-size: 0.75rem;
    line-height: 1;
    padding: 0px 4px;
  }

  .lang_switch > a {
    padding: 2px 4px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
</style>
